<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Markdown - iroc</title>
  <link rel="stylesheet" href="/node_modules/github-markdown-css/github-markdown.css">
  <style>
    .markdown-body {
      box-sizing: border-box;
      min-width: 200px;
      max-width: 980px;
      margin: 0 auto;
      padding: 45px;
    }
  </style>
</head>

<body>
  <article class="markdown-body" id="markdown_body">
  </article>
  <script src="/node_modules/marked/lib/marked.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    var socket = io()
    socket.on('note', function(msg) {
      document.getElementById('markdown_body').innerHTML = marked(msg)
    })

    socket.on('first', function (msg) {
      document.getElementById('markdown_body').innerHTML = marked(msg)
    })
  </script>
</body>

</html>
